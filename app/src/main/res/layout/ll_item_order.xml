<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/burgerimage"/>

                <TextView
                    android:id="@+id/txt_item"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:text="Zinger Burger" />

                <TextView
                    android:id="@+id/item_ratecurr"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:layout_weight="0.10"
                    android:gravity="center|end"
                    android:text="Rs. " />

                <TextView
                    android:id="@+id/item_rate"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:text="200" />

                <ImageView
                    android:id="@+id/orderdetail_addOneMoreIV"
                    android:layout_width="0dip"
                    android:layout_weight="0.05"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_add"/>

                <TextView
                    android:id="@+id/orderdetail_sameItemCountTV"
                    android:layout_width="0dip"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/orderdetail_removeOneMoreIV"
                    android:layout_width="0dip"
                    android:layout_weight="0.05"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_minus"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>
