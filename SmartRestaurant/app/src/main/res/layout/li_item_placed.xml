<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/placeItemImageIV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/icon_item_placeholder"/>

        <TextView
            android:text="Chicken Burger"
            android:id="@+id/placeItemNameIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxWidth="165dp"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/placeItemImageIV"
            android:layout_marginTop="10dp"/>

        <TextView
            android:text="Rs 220"
            android:id="@+id/placeItemPriceIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/placeItemImageIV"
            android:layout_below="@+id/placeItemNameIV"
            />

        <TextView
            android:id="@+id/placeItemStatusIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOrange"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:drawablePadding="7dp"
            android:layout_marginStart="15dp"
            android:drawableStart="@mipmap/icon_status_processing"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/deleteItemIV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_delete"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/addOneMoreIV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_add"
            android:layout_marginTop="20dp"
            android:background="@color/colorGrayLight"
            android:tint="@color/colorBlack"
            android:padding="5dp"
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/sameItemCountTV"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:text="1"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/addOneMoreIV"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/removeOneMoreIV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_minus"
            android:layout_marginTop="20dp"
            android:background="@color/colorGrayLight"
            android:tint="@color/colorBlack"
            android:padding="5dp"
            android:layout_toStartOf="@+id/sameItemCountTV"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/remarksTitleIV"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:text="Remarks"
            android:textStyle="bold"
            android:layout_below="@id/placeItemImageIV"
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/remarksDescTV"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:hint="No Remarks"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            android:layout_below="@id/remarksTitleIV"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:paddingBottom="10dp"/>


    </RelativeLayout>
</layout>
