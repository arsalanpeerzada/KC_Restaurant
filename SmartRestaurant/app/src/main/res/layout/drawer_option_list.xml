<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/newgreenbg">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/drawer_header"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/drawerHomeLL"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="14dp"
                    android:src="@drawable/ic_home_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Home"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawerNotificatiosLL"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="16dp"
                    android:src="@drawable/ic_message_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Notifications"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawerNewOrderLL"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_control_point_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="New Order"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawerMyOrdersLL"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_assignment_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="My Orders"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawerLogoutLL"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_exit_to_app_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="LOGOUT"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_Copyright"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:text="@string/copyright"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</layout>
