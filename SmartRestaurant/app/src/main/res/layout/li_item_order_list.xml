<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:id="@+id/liItemOrderListRootRL">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tableNoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="Table No: "
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/orderNoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="Order No: "
                android:layout_marginStart="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <Button
            android:id="@+id/ListStatusBtn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:text="@string/hold"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/ListDeleteBtn"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/ListStatusBtn"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@color/Red"
            android:text="Delete"
            android:textColor="@color/colorWhite" />


        <LinearLayout
            android:id="@+id/statusLL"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="1">


           <!-- <TextView
                android:id="@+id/txt_onhold"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:fontFamily="@font/roboto_regular"
                android:gravity="end"
                android:text="on Hold :"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_memberonhold"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="14"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />-->

            <TextView
                android:id="@+id/txt_itemnew"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="0"
                android:background="@drawable/red_drawable"
                android:textColor="@color/colorWhite"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_new"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="New "
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txt_iteminprocess"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="0"
                android:background="@drawable/orange_drawable"
                android:textColor="@color/colorWhite"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_inprocess"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="In Process "
                android:layout_marginStart="5dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_itemready"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="0"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="@drawable/blue_drawable"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/txt_ready"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:text="Ready "
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txt_itemserved"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="0"
                android:background="@drawable/green_drawable"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_served"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_regular"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:text="Served "
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>
</layout>
